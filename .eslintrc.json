{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"react-app",
		"prettier"
		// ,"plugin:react/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"printWidth": 80,
				"trailingComma": "es5",
				"semi": true,
				"jsxSingleQuote": true,
				"singleQuote": true,
				"useTabs": true,
				"endOfLine": "auto"
			}
		]
	}
}
